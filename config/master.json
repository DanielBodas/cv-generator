        {
            "id": "languages",
            "area": "sidebar",
            "mode": "visual",
            "weight": 1,
            "hasScript": true
        },
        {
            "id": "references",
            "area": "sidebar",
            "mode": "detailed",
            "weight": 0
        },
        {
            "id": "about",
            "area": "main",
            "mode": "detailed",
            "weight": true,
            "hasScript": true
        },
        {
            "id": "executive-highlights",
            "area": "main",
            "mode": "detailed",
            "weight": 1,
            "hasScript": true
